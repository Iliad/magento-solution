{
  "kind": "Deployment",
  "metadata": {
    "name": "{{.DB_NAME}}-{{.HASH}}"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "{{.DB_NAME}}-{{.HASH}}"
        },
        "name": "{{.DB_NAME}}-{{.HASH}}"
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "{{.MYSQL_ROOT_PASSWORD}}"
              },
              {
                "name": "MYSQL_DATABASE",
                "value": "{{.MYSQL_DATABASE}}"
              },
              {
                "name": "MYSQL_USER",
                "value": "{{.MYSQL_USER}}"
              },
              {
                "name": "MYSQL_PASSWORD",
                "value": "{{.MYSQL_PASSWORD}}"
              }
           ],
            "image": "{{.DB_IMAGE}}",
            "name": "{{.DB_NAME}}",
            "resources": {
              "requests": {
                "cpu": "{{.MAGENTO_CPU}}",
                "memory": "{{.MAGENTO_RAM}}"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "{{.DB_PATH}}",
                "name": "{{.VOLUME}}",
                "subPath": "{{.DB_NAME}}-{{.HASH}}{{.DB_PATH}}"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "{{.VOLUME}}"
          }
        ]
      }
    }
  }
}
